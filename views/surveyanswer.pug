html
    head
        link(rel="stylesheet", href="/css/styles.css")
    main.container
        h1 #{survey.question}
        form.verticalFlow(method="", action="/api/surveyanswer/submit/" + survey.id)
            for possibleanswer in survey.possibleanswers
                label
                    input(type="radio", name="surveyanswer" value=possibleanswer.id)
                    span #{possibleanswer.answer}

